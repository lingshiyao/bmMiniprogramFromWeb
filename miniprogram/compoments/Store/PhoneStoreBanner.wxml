    <view class="store-banner-header-img-box">
        <image show-menu-by-longpress lazy-load mode="aspectFill" class="store-banner-header-img-box" id="store_banner_header_img" style="position: absolute;" src="{{data.headerImg}}"></image>
    </view>


    <view class="store-banner-header-title">
        {{ data.projectName }}
    </view>
    <view class="store-banner-header-subtitle">
        {{ data.projectTime }}
    </view>
    <view class="store-banner-statistical" wx:if="{{!data.isBlind}}">
        <view class="store-banner-statistical-item" wx:for="{{data.contents}}" wx:for-item="item" wx:key="unique">
            <view class="store-banner-statistical-item-num">
                {{ item.title }}
            </view>
            <view class="store-banner-statistical-item-title">
                {{ item.num }}
            </view>
        </view>
    </view>
</view>