.select-box-title {
    height: 9.6vw;
    line-height: 9.6vw;
    font-size: 3vw;
    font-weight: 400;
    color: #1e1e1e;
    text-align: left;
    cursor: pointer;
    display: inline-block;
    vertical-align: middle;
    margin-left: 2vw;
}

.select-box-title:hover {
    color: #f99d1a;
}

.select-box-more {
    position: relative;
    float: right;
    top: 4vw;
    right: 3vw;
    width: 3vw;
    height: 2vw;
}

.select-box-img {
    vertical-align: middle;
}

.select-box-bg {
    background-color: white;
    border-radius: 3vw;
    z-index: 10;
    position: relative;
    width: 100%;
    /*border: 1px solid #f99d1a;*/
}

.select-box-button {
    width: 100%;
    height: 9.6vw;
    transition: top 1s;
}
