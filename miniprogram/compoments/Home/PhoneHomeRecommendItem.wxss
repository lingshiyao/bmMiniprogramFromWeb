
.phone-home-recommend-item {
    width: 40vw;
    height: 57.33vw;
    border-radius: 3vw;
    background-color: white;
    display: inline-block;
    margin: 1.97vw 4vw 0vw 0vw;
}

.phone-home-recommend-item-img-box {
    width: 39.87vw;
    height: 40vw;
    border-radius: 3vw 3vw 0vw 0vw;
    background-color: #8d2db5;
    position: relative;
    overflow: hidden;
    display: flex;
    justify-content: center;
}

.phone-home-recommend-item-img {
    border-radius: 3vw 3vw 0vw 0vw;
    position: absolute;
}

.phone-home-recommend-item-title {
    margin: 4.16vw 4vw 0vw 4vw;
    font-size: 2.13vw;
    font-weight: bold;
    color: #1e1e1e;
    text-align: center;
}

.phone-home-recommend-item-subtitle {
    font-size: 1.93vw;
    margin: 1.7vw 4vw 0vw 4vw;
    font-weight: 400;
    color: #646464;
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    max-width: 36vw;
    height: 6vw;
    line-height: 3vw;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    word-break: break-all;
    /* background-color: red; */
}
