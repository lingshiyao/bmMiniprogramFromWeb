
.input {
    width: 77.33333333333333vw;
    height: 11.733333333333333vw;
    background: #EEEEEE;
    border-radius: 2.6666666666666665vw;
    border: 0vw;
    box-sizing: border-box;
    outline: none;
    font-size: 3.466666666666667vw;
    font-weight: 400;
    color: #969696;
    text-indent: 4vw;
    transition: all 0.2s ease 0s;
}

.submit-btn {
    width: 77.33333333333333vw;
    height: 11.733333333333333vw;
    line-height: 11.733333333333333vw;
    background: #F99D1A;
    opacity: 0.3;
    border-radius: 2.6666666666666665vw;
    font-size: 4vw;
    font-weight: 400;
    color: #FFFFFF;
    text-align: center;
    margin-top: 8vw;
}

.change-pwd {
    background: #FFFFFF;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
}
